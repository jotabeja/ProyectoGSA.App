@page "/lipersonas"
@using ProyectoGSA.App.Dominio.Entidades;

<h3>Listado de Personas</h3>
<hr>

    <br>
    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombres</th>
                <th>Identificacion</th>
                <th>Apellidos</th>
                <th>Opciones</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in ListaPersonas)
            {
                <tr>
                    <td>@persona.id</td>
                    <td>@persona.identificacion</td>
                    <td>@persona.nombres</td>
                    <td>@persona.apellidos</td>
                    <td>
                    <a class="btn btn-primary table-btn" asp-page="./lipersonas" asp-route-personaId="@persona.id">
                        <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./lipersonas" asp-route-personaId="@persona.id">
                        <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" asp-page="./lipersonas" asp-route-personaId="@persona.id">
                        <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>Eliminar
                    </a>
                </td>
                    
                </tr>
            }
                
         
        </tbody>
    </table>
